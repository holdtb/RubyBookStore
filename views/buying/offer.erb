<!--main-->
<div class="container" id="main">
  <div class="col-md-6 col-sm-8">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title"><%= Book.find(@post.book_id).title %></h3>
      </div>
      <div class="panel-body">
        <p>
          <img src="<%=Book.find(@post.book_id).thumbnail%>" class="img-thumbnail pull-right">
          <strong>Condition: </strong><%= @post.condition.capitalize! %> </br>
          <strong>Authors: </strong><%= @authors.join(", ") %></br>
          <strong>Price: </strong>$<%= session[:price] %></br>
        </p>
        <div class="clearfix"></div>
        <hr>
        <a href='/offer/make/asking/<%= "#{@post._id}" %>'>Offer Asking Price</a>
      </div>
    </div>
  </div>


</div>
