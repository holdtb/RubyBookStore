<%content_for :style do %>
  <link href="../css/styles.css" rel="stylesheet">
<%end%>

<% content_for :nav do %>
<nav class="navbar navbar-fixed-top header">
  <div class="col-md-12">
    <div class="navbar-header">
      <a href="#" class="navbar-brand">Bookstore Web Site</a>
    </div>
  </div>
</nav>
<div class="navbar navbar-default" id="subnav">
  <div class="col-md-12">
    <div class="navbar-header">
      <a href="#" style="margin-left:15px;" class="navbar-btn btn btn-default btn-plus dropdown-toggle" data-toggle="dropdown"><span class="glyphicon glyphicon-bullhorn" style="color:#FFD829;"></span> Selling <small><i class="glyphicon glyphicon-chevron-down"></i></small></a>
      <ul class="nav dropdown-menu">
        <li><a href="/buying"><i class="glyphicon glyphicon-shopping-cart" style="color:#1111dd;"></i> Buying</a></li>
        <li class="nav-divider"></li>
        <li><a href="/selling"><i class="glyphicon glyphicon-bullhorn" style="color:#FFD829;"></i> Selling</a></li>
        <li class="nav-divider"></li>
        <li><a href="/your_orders"><i class="glyphicon glyphicon-user" style="color:#6f5499;"></i> Your Orders</a></li>
        <li class="nav-divider"></li>
        <li><a href="/view_offers"><i class="glyphicon glyphicon-inbox" style="color:#6f5499;"></i> View Offers</a></li>
        <li class="nav-divider"></li>
        <li><a href="#"><i class="glyphicon glyphicon-exclamation-sign" style="color:#dd1111;"></i> Logout</a></li>
      </ul>
      <%=defined?(@user) ? @user : "Guest" %>
    </div>
  </div>
</div>
<%end%>
<!--main-->

<div class="container" id="main">
  <div class="col-sm-10 col-md-8 col-sm-offset-2 col-md-offset-2">
  <div class="row" align="center">
      <h3>Please confirm the following information is correct</h3>
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title"><%= @book.title %> by <%=@authors.map(&:name).join(", ")%></h3>
        </div>
        <div class="panel-body">
          <p>
            <img src="<%=@book.thumbnail%>" class="img-thumbnail pull-left">
            <strong>Date: </strong><%= Time.now.strftime("%m/%d/%Y %I:%M %p") %></br>
            <strong>Seller: </strong><%= @user %></br></br>

            <strong>Condition: </strong><%= @condition.capitalize if @condition %></br>

            <strong>Price: </strong>$<%= @price %>.00</br>
          </p>
          <div class="clearfix"></div>
          <hr>
          <a href="/buying" class="pull-left">Cancel</a>
          <a href="/selling/sell" class="pull-right">Confirm</a>
        </div>
      </div>
  </div>
</div>
